<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/ranklist_game_fragment_lv_item_num"
        android:text="4"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ranklist_game_fragment_lv_item_image"
        android:src="@mipmap/icon_lol"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ranklist_game_fragment_lv_item_num"
        android:layout_marginLeft="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_toRightOf="@+id/ranklist_game_fragment_lv_item_image"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ranklist_game_fragment_lv_item_name"
            android:text="姓名"
            android:layout_marginTop="17dp"
            android:textColor="#1b1b1b"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ranklist_game_fragment_lv_item_game_name"
                android:text="游戏名称"
                android:textSize="10sp"
                android:layout_marginTop="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_gravity="bottom"
                android:layout_marginLeft="9dp"
                android:background="#e7e4e4"
                android:layout_width="1dp"
                android:layout_height="12dp"/>

            <TextView
                android:id="@+id/ranklist_game_fragment_lv_item_moods"
                android:text="人气"
                android:textSize="10sp"
                android:layout_marginLeft="9dp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:background="@drawable/attention"
        android:button="@null"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_width="60dp"
        android:layout_height="25dp" />

    <View
        android:layout_alignParentBottom="true"
        android:background="#e7e4e4"
        android:layout_marginLeft="100dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>