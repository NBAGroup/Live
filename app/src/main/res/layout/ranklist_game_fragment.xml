<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@mipmap/commentator_top_three_bg"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp">

                            <ImageView
                                android:id="@+id/ranklist_game_fragment_image_one"
                                android:layout_centerInParent="true"
                                android:src="@mipmap/icon_lol"
                                android:layout_width="85dp"
                                android:layout_height="85dp" />

                            <ImageView
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:src="@mipmap/icon_top_one"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />

                        </RelativeLayout>

                    </FrameLayout>

                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:id="@+id/ranklist_game_fragment_name_one"
                        android:text="姓名"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="10sp"
                        android:id="@+id/ranklist_game_fragment_moods_one"
                        android:text="人气"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <CheckBox
                        android:layout_gravity="center"
                        android:background="@drawable/attention"
                        android:button="@null"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_width="75dp"
                        android:layout_height="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp">

                            <ImageView
                                android:id="@+id/ranklist_game_fragment_image_two"
                                android:src="@mipmap/icon_lol"
                                android:layout_width="60dp"
                                android:layout_height="60dp" />

                            <ImageView
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:src="@mipmap/icon_top_two"
                                android:layout_width="15dp"
                                android:layout_height="15dp" />

                        </RelativeLayout>

                    </FrameLayout>

                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:id="@+id/ranklist_game_fragment_name_two"
                        android:text="姓名"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="10sp"
                        android:id="@+id/ranklist_game_fragment_moods_two"
                        android:text="人气"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <CheckBox
                        android:background="@drawable/attention"
                        android:button="@null"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_width="65dp"
                        android:layout_height="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp">

                            <ImageView
                                android:id="@+id/ranklist_game_fragment_image_three"
                                android:src="@mipmap/icon_lol"
                                android:layout_width="60dp"
                                android:layout_height="60dp" />

                            <ImageView
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:src="@mipmap/icon_top_three"
                                android:layout_width="15dp"
                                android:layout_height="15dp" />

                        </RelativeLayout>

                    </FrameLayout>

                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:id="@+id/ranklist_game_fragment_name_three"
                        android:text="姓名"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="10sp"
                        android:id="@+id/ranklist_game_fragment_moods_three"
                        android:text="人气"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <CheckBox
                        android:background="@drawable/attention"
                        android:button="@null"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_width="65dp"
                        android:layout_height="30dp" />

                </LinearLayout>

            </RelativeLayout>

        </FrameLayout>

        <com.yp.paparazzilive.view.RankListView
            android:background="#ffff"
            android:id="@+id/ranklist_game_fragment_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</ScrollView>